<style>
/* CSS Variables for Theme */
:root[data-theme="light"] {
    --bg-gradient-start: #667eea;
    --bg-gradient-end: #764ba2;
    --container-bg: #ffffff;
    --text-primary: #333333;
    --text-secondary: #666666;
    --card-bg: #f9fafb;
    --card-border: #e5e7eb;
    --table-hover: #f3f4f6;
    --shadow-color: rgba(0, 0, 0, 0.2);
    --shadow-light: rgba(0, 0, 0, 0.1);
    --shadow-lighter: rgba(0, 0, 0, 0.05);
    --border-color: #e5e7eb;
    --empty-state-color: #9ca3af;
}

:root[data-theme="dark"] {
    --bg-gradient-start: #1a1a2e;
    --bg-gradient-end: #16213e;
    --container-bg: #0f172a;
    --text-primary: #e2e8f0;
    --text-secondary: #cbd5e1;
    --card-bg: #1e293b;
    --card-border: #334155;
    --table-hover: #334155;
    --shadow-color: rgba(0, 0, 0, 0.5);
    --shadow-light: rgba(0, 0, 0, 0.3);
    --shadow-lighter: rgba(0, 0, 0, 0.2);
    --border-color: #334155;
    --empty-state-color: #64748b;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, var(--bg-gradient-start) 0%, var(--bg-gradient-end) 100%);
    min-height: 100vh;
    padding: 20px;
    transition: background 0.3s ease;
}

/* Theme Toggle Button */
.theme-toggle {
    background: var(--container-bg);
    border: 2px solid var(--border-color);
    border-radius: 50px;
    padding: 10px 20px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    box-shadow: 0 4px 15px var(--shadow-light);
    transition: all 0.3s ease;
    font-size: 1em;
    color: var(--text-primary);
}

.theme-toggle:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--shadow-light);
}

.theme-toggle .theme-icon {
    font-size: 1.3em;
    transition: transform 0.3s ease;
}

.theme-toggle:hover .theme-icon {
    transform: rotate(20deg);
}

/* Header Styles */
.main-header {
    background: var(--container-bg);
    border-bottom: 2px solid var(--border-color);
    box-shadow: 0 4px 15px var(--shadow-light);
    padding: 0;
    margin: -20px -20px 30px -20px;
    position: sticky;
    top: 0;
    z-index: 999;
}

.header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 15px 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
}

.logo {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: var(--text-primary);
    font-size: 1.5em;
    font-weight: 700;
    transition: transform 0.3s ease;
}

.logo:hover {
    transform: scale(1.05);
}

.logo-icon {
    font-size: 1.8em;
}

.nav-menu {
    display: flex;
    align-items: center;
    gap: 25px;
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-menu a {
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
}

.nav-menu a:hover {
    background: var(--card-bg);
    transform: translateY(-2px);
}

.nav-menu a.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 8px 16px;
    background: var(--card-bg);
    border-radius: 50px;
    border: 1px solid var(--border-color);
}

.user-name {
    color: var(--text-primary);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
}

.user-email {
    color: var(--text-secondary);
    font-size: 0.85em;
}

.btn-logout {
    background: #fee2e2;
    color: #ef4444;
    padding: 6px 14px;
    border-radius: 20px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid transparent;
}

.btn-logout:hover {
    background: #ef4444;
    color: white;
    border-color: #dc2626;
}

.btn-auth {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white !important;
    padding: 10px 20px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-auth:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

/* Footer Styles */
.main-footer {
    background: var(--container-bg);
    border-top: 2px solid var(--border-color);
    margin: 50px -20px -20px -20px;
    padding: 40px 30px 20px;
    box-shadow: 0 -4px 15px var(--shadow-light);
}

.footer-container {
    max-width: 1400px;
    margin: 0 auto;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 30px;
}

.footer-section h3 {
    color: var(--text-primary);
    margin-bottom: 15px;
    font-size: 1.2em;
}

.footer-section p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 10px;
}

.footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
}

.footer-links li {
    margin-bottom: 10px;
}

.footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
}

.footer-links a:hover {
    color: #667eea;
}

.social-links {
    display: flex;
    gap: 15px;
    margin-top: 15px;
}

.social-links a {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--card-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1.2em;
}

.social-links a:hover {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.footer-bottom {
    border-top: 1px solid var(--border-color);
    padding-top: 20px;
    text-align: center;
    color: var(--text-secondary);
    font-size: 0.9em;
}

.footer-bottom a {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
}

.footer-bottom a:hover {
    text-decoration: underline;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    /* Reduce body padding */
    body {
        padding: 10px;
    }

    /* Compact header for mobile */
    .main-header {
        margin: -10px -10px 20px -10px;
        position: relative;
    }

    .header-container {
        padding: 10px 15px;
        gap: 10px;
    }

    /* Logo smaller on mobile */
    .logo {
        font-size: 1.2em;
    }

    .logo-icon {
        font-size: 1.5em;
    }

    /* Hide navigation menu on mobile (or make it horizontal scroll) */
    nav {
        width: 100%;
        overflow-x: auto;
    }

    .nav-menu {
        gap: 10px;
        padding: 5px 0;
        flex-wrap: nowrap;
        width: max-content;
    }

    .nav-menu a {
        padding: 6px 12px;
        font-size: 0.85em;
        white-space: nowrap;
    }

    /* User info more compact */
    .user-info {
        padding: 6px 12px;
        gap: 10px;
        flex-wrap: wrap;
    }

    .user-name {
        font-size: 0.9em;
    }

    .user-email {
        display: none; /* Hide email on mobile to save space */
    }

    .btn-logout {
        padding: 5px 12px;
        font-size: 0.85em;
    }

    /* Theme toggle smaller */
    .theme-toggle {
        padding: 6px 12px;
        font-size: 0.85em;
    }

    .theme-toggle .theme-icon {
        font-size: 1.1em;
    }

    .theme-text {
        display: none; /* Hide text, keep only icon on very small screens */
    }

    /* Auth buttons */
    .btn-auth {
        padding: 8px 16px;
        font-size: 0.9em;
    }

    /* Footer */
    .main-footer {
        margin: 30px -10px -10px -10px;
        padding: 30px 20px 15px;
    }

    .footer-content {
        grid-template-columns: 1fr;
        gap: 25px;
    }

    /* Responsive tables - wrap in scrollable container */
    table {
        display: block;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    /* Make table text smaller on mobile */
    table th,
    table td {
        font-size: 0.85em;
        padding: 8px;
    }
}

/* Extra small screens (phones in portrait) */
@media (max-width: 480px) {
    /* Even more compact header */
    .header-container {
        padding: 8px 10px;
    }

    .logo {
        font-size: 1.1em;
    }

    /* Stack header items vertically on very small screens */
    .header-container {
        align-items: stretch;
    }

    /* Navigation horizontal scroll */
    .nav-menu {
        font-size: 0.8em;
    }

    .nav-menu a {
        padding: 5px 10px;
        font-size: 0.8em;
    }

    /* Simplify user info */
    .user-info {
        font-size: 0.85em;
        padding: 5px 10px;
    }

    .btn-logout {
        font-size: 0.8em;
        padding: 4px 10px;
    }

    /* Theme toggle icon only */
    .theme-toggle {
        padding: 5px 10px;
    }

    /* Auth buttons stack */
    .btn-auth {
        font-size: 0.85em;
        padding: 6px 14px;
    }

    /* Smaller table font */
    table th,
    table td {
        font-size: 0.75em;
        padding: 6px 4px;
    }
}

</style>
