{% extends 'stocks/base.j2' %}
{% block title %}Create Stock Basket{% endblock %}

{% block css %}
    {{ super() }}
    <style>
    .container {
        max-width: 800px;
        margin: 40px auto;
        background: var(--card-bg);
        border-radius: var(--radius-lg);
        padding: 48px;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
    }

    h1 {
        color: var(--text-primary);
        margin-bottom: 8px;
        font-size: 1.875rem;
        letter-spacing: -0.025em;
    }

    .subtitle {
        color: var(--text-secondary);
        margin-bottom: 40px;
        font-size: 1.1rem;
    }

    .form-group {
        margin-bottom: 32px;
    }

    label {
        display: block;
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 10px;
        font-size: 0.95rem;
    }

    input[type="text"],
    input[type="number"],
    textarea {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
        font-size: 1rem;
        transition: all 0.2s ease;
        background: var(--input-bg);
        color: var(--text-primary);
        box-shadow: 0 1px 2px 0 rgba(0,0,0,0.05);
    }

    input:focus,
    textarea:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }

    textarea {
        min-height: 120px;
        resize: vertical;
        line-height: 1.6;
    }

    .stocks-selection {
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
        padding: 0;
        background: var(--bg-body);
        max-height: 400px;
        overflow-y: auto;
    }

    /* Custom Scrollbar for stocks list */
    .stocks-selection::-webkit-scrollbar {
        width: 8px;
    }
    .stocks-selection::-webkit-scrollbar-track {
        background: transparent;
    }
    .stocks-selection::-webkit-scrollbar-thumb {
        background-color: var(--border-color);
        border-radius: 20px;
    }

    .stock-checkbox {
        display: flex;
        align-items: center;
        padding: 16px 20px;
        background: var(--card-bg);
        border-bottom: 1px solid var(--border-color);
        transition: background 0.2s ease;
        cursor: pointer;
    }

    .stock-checkbox:last-child {
        border-bottom: none;
    }

    .stock-checkbox:hover {
        background: var(--table-hover);
    }

    .stock-checkbox input[type="checkbox"] {
        width: 18px;
        height: 18px;
        margin-right: 16px;
        cursor: pointer;
        accent-color: var(--primary-color);
    }

    .stock-info {
        flex: 1;
        cursor: pointer;
    }

    .stock-symbol {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.95rem;
    }

    .stock-name {
        color: var(--text-secondary);
        font-size: 0.85rem;
        margin-top: 2px;
    }

    .stock-price {
        color: var(--text-primary);
        font-weight: 500;
        font-family: 'Inter', monospace; /* Monospace for numbers aligning if needed, or Inter tabular nums */
        font-feature-settings: "tnum";
    }

    .btn {
        padding: 12px 24px;
        border: none;
        border-radius: var(--radius-md);
        cursor: pointer;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        gap: 8px;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
        box-shadow: 0 1px 2px 0 rgba(0,0,0,0.1);
    }

    .btn-primary:hover {
        background: var(--primary-hover);
        transform: translateY(-1px);
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -1px rgba(0,0,0,0.06);
    }

    .btn-secondary {
        background: transparent;
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
    }

    .btn-secondary:hover {
        background: var(--table-hover);
        color: var(--text-primary);
    }

    .actions {
        margin-top: 40px;
        display: flex;
        gap: 16px;
        align-items: center;
    }

    .helper-text {
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-top: 8px;
    }

    .messages {
        margin-bottom: 24px;
    }

    .alert {
        padding: 16px;
        border-radius: var(--radius-md);
        margin-bottom: 16px;
        font-size: 0.95rem;
    }

    .alert-error {
        background: #fef2f2;
        color: #991b1b;
        border: 1px solid #fee2e2;
    }

    .alert-success {
        background: #f0fdf4;
        color: #166534;
        border: 1px solid #dcfce7;
    }

    .selected-count {
        background: var(--primary-color);
        color: white;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
        margin-left: 10px;
        vertical-align: middle;
        margin-bottom: 0;
    }
    
    .label-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .search-box {
        margin-bottom: 16px;
        position: relative;
    }

    .search-box input {
        padding-left: 40px; /* Space for icon */
        border-radius: var(--radius-md);
    }
    
    .search-box::before {
        content: 'üîç';
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.5;
        font-size: 1rem;
        pointer-events: none;
    }

    .no-stocks-message {
        text-align: center;
        color: var(--text-secondary);
        padding: 40px;
    }
    
    @media (max-width: 768px) {
        .container {
            padding: 24px;
            margin: 20px auto;
        }
        .actions {
            flex-direction: column;
            gap: 12px;
        }
        .btn {
            width: 100%;
        }
    }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <h1>üéØ Create Stock Basket</h1>
    <p class="subtitle">Build an equal-weighted portfolio with your selected stocks</p>

    {% if messages %}
        <div class="messages">
            {% for message in messages %}
                <div class="alert alert-{{ message.tags }}">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <form method="POST" action="{{ url('basket_create') }}">
        
<input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="form-group">
            <label for="name">Basket Name *</label>
            <input type="text" id="name" name="name" required placeholder="e.g., Tech Leaders Portfolio" value="{{ prefill_name }}">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Describe your investment strategy...">{{ prefill_description }}</textarea>
        </div>

        <div class="form-group">
            <label for="investment_amount">Total Investment Amount (‚Çπ) *</label>
            <input type="number" id="investment_amount" name="investment_amount" required
                   min="1000" step="0.01" placeholder="100000" value="{{ prefill_investment }}">
            <div class="helper-text">This amount will be equally distributed across selected stocks</div>
        </div>

        <div class="form-group">
            <div class="label-row" style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 12px;">
                <label style="margin-bottom: 0;">Select Stocks * <span style="font-weight: 400; color: var(--text-secondary); font-size: 0.85em;">(Min 2)</span></label>
                <div class="selected-count" id="selectedCount">
                    <span id="count">0</span> selected
                </div>
            </div>

            <div class="search-box">
                <input type="text" id="searchStock" placeholder="üîç Search stocks..." onkeyup="filterStocks()">
            </div>

            <div class="stocks-selection" id="stocksList">
                {% if stocks %}
                    {% for stock in stocks %}
                        <div class="stock-checkbox" data-name="{{ stock.name }}"
                             data-symbol="{{ stock.symbol }}">
                            <input type="checkbox" name="stocks" value="{{ stock.symbol }}"
                                   id="stock_{{ stock.id }}" onchange="updateCount()" 
                                   {% if stock.symbol in prefill_stocks %}checked{% endif %}>
                            <label for="stock_{{ stock.id }}" class="stock-info">
                                <div class="stock-symbol">{{ stock.symbol }}</div>
                                <div class="stock-name">{{ stock.name }}</div>
                            </label>
                            <div class="stock-price">
                                {% if stock.current_price %}
                                    ‚Çπ{{ stock.current_price }}
                                {% else %}
                                    Price N/A
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="no-stocks-message">
                        No stocks available. Please load stocks first.
                    </p>
                {% endif %}
            </div>
            <div class="helper-text">Each stock will have equal weight in your basket. Select at least 2 stocks.</div>
        </div>

        <div class="actions">
            <button type="submit" class="btn btn-primary">Create Basket</button>
            <a href="{{ url('home') }}" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
{% endblock %}

{% block javascript %}
<script src="{{ static('js/pages/basket-create.js') }}"></script>
{% endblock %}
