{% extends 'stocks/base.j2' %}
{% block title %}Create Stock Basket{% endblock %}

{% block css %}
    {{ super() }}
    <style>
    
    .container {
        max-width: 900px;
        margin: 0 auto;
        background: var(--container-bg);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 40px var(--shadow-color);
        transition: background 0.3s ease, box-shadow 0.3s ease;
    }

    h1 {
        color: var(--text-primary);
        margin-bottom: 10px;
        font-size: 2.2em;
        transition: color 0.3s ease;
    }

    .subtitle {
        color: var(--text-secondary);
        margin-bottom: 30px;
        transition: color 0.3s ease;
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        display: block;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 8px;
        font-size: 1.05em;
        transition: color 0.3s ease;
    }

    input[type="text"],
    input[type="number"],
    textarea {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        font-size: 1em;
        transition: border-color 0.3s ease, background 0.3s ease, color 0.3s ease;
        background: var(--container-bg);
        color: var(--text-primary);
    }

    input:focus,
    textarea:focus {
        outline: none;
        border-color: #667eea;
    }

    textarea {
        min-height: 100px;
        resize: vertical;
    }

    .stocks-selection {
        border: 2px solid var(--border-color);
        border-radius: 10px;
        padding: 20px;
        background: var(--card-bg);
        max-height: 400px;
        overflow-y: auto;
        transition: background 0.3s ease, border-color 0.3s ease;
    }

    .stock-checkbox {
        display: flex;
        align-items: center;
        padding: 12px;
        margin-bottom: 10px;
        background: var(--container-bg);
        border-radius: 8px;
        border: 2px solid transparent;
        transition: all 0.2s ease;
    }

    .stock-checkbox:hover {
        border-color: #667eea;
        transform: translateX(5px);
    }

    .stock-checkbox input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-right: 12px;
        cursor: pointer;
    }

    .stock-info {
        flex: 1;
    }

    .stock-symbol {
        font-weight: bold;
        color: var(--text-primary);
        font-size: 1.05em;
        transition: color 0.3s ease;
    }

    .stock-name {
        color: var(--text-secondary);
        font-size: 0.9em;
        transition: color 0.3s ease;
    }

    .stock-price {
        color: #667eea;
        font-weight: 600;
    }

    .btn {
        padding: 14px 30px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.1em;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        margin-right: 10px;
    }

    .btn-primary {
        background: #667eea;
        color: white;
    }

    .btn-primary:hover {
        background: #5568d3;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
        background: #6b7280;
        color: white;
    }

    .btn-secondary:hover {
        background: #4b5563;
    }

    .actions {
        margin-top: 30px;
        display: flex;
        gap: 15px;
    }

    .helper-text {
        font-size: 0.9em;
        color: var(--text-secondary);
        margin-top: 5px;
        transition: color 0.3s ease;
    }

    .messages {
        margin-bottom: 20px;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .alert-error {
        background: #fee2e2;
        color: #991b1b;
        border-left: 4px solid #ef4444;
    }

    .selected-count {
        background: #667eea;
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9em;
        display: inline-block;
        margin-bottom: 15px;
        transition: background 0.3s ease;
    }

    .search-box {
        margin-bottom: 15px;
    }

    .search-box input {
        width: 100%;
        padding: 10px 15px;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        background: var(--container-bg);
        color: var(--text-primary);
        transition: all 0.3s ease;
    }

    .no-stocks-message {
        text-align: center;
        color: var(--text-secondary);
        padding: 20px;
        transition: color 0.3s ease;
    }
    </style>
{% endblock %}

{% block content %}
<div class="container">
    <h1>ðŸŽ¯ Create Stock Basket</h1>
    <p class="subtitle">Build an equal-weighted portfolio with your selected stocks</p>

    {% if messages %}
        <div class="messages">
            {% for message in messages %}
                <div class="alert alert-{{ message.tags }}">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <form method="POST" action="{{ url('basket_create') }}">
        
<input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="form-group">
            <label for="name">Basket Name *</label>
            <input type="text" id="name" name="name" required placeholder="e.g., Tech Leaders Portfolio" value="{{ prefill_name }}">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Describe your investment strategy...">{{ prefill_description }}</textarea>
        </div>

        <div class="form-group">
            <label for="investment_amount">Total Investment Amount (â‚¹) *</label>
            <input type="number" id="investment_amount" name="investment_amount" required
                   min="1000" step="0.01" placeholder="100000" value="{{ prefill_investment }}">
            <div class="helper-text">This amount will be equally distributed across selected stocks</div>
        </div>

        <div class="form-group">
            <label>Select Stocks * (Minimum 2 stocks required)</label>
            <div class="selected-count" id="selectedCount">
                Selected: <span id="count">0</span> stocks
            </div>

            <div class="search-box">
                <input type="text" id="searchStock" placeholder="ðŸ” Search stocks..." onkeyup="filterStocks()">
            </div>

            <div class="stocks-selection" id="stocksList">
                {% if stocks %}
                    {% for stock in stocks %}
                        <div class="stock-checkbox" data-name="{{ stock.name }}"
                             data-symbol="{{ stock.symbol }}">
                            <input type="checkbox" name="stocks" value="{{ stock.symbol }}"
                                   id="stock_{{ stock.id }}" onchange="updateCount()" 
                                   {% if stock.symbol in prefill_stocks %}checked{% endif %}>
                            <label for="stock_{{ stock.id }}" class="stock-info">
                                <div class="stock-symbol">{{ stock.symbol }}</div>
                                <div class="stock-name">{{ stock.name }}</div>
                            </label>
                            <div class="stock-price">
                                {% if stock.current_price %}
                                    â‚¹{{ stock.current_price }}
                                {% else %}
                                    Price N/A
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="no-stocks-message">
                        No stocks available. Please load stocks first.
                    </p>
                {% endif %}
            </div>
            <div class="helper-text">Each stock will have equal weight in your basket. Select at least 2 stocks.</div>
        </div>

        <div class="actions">
            <button type="submit" class="btn btn-primary">Create Basket</button>
            <a href="{{ url('home') }}" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>
{% endblock %}

{% block javascript %}
<script src="{{ static('js/pages/basket-create.js') }}"></script>
{% endblock %}
