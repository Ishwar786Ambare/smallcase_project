{# Language Switcher Widget #}
<div class="language-switcher">
    <button class="language-btn" id="languageToggle" aria-label="{{ _('Change language') }}">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="2" y1="12" x2="22" y2="12"/>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
        </svg>
        <span class="current-lang">{{ get_language()|upper }}</span>
    </button>
    
    <div class="language-dropdown" id="languageDropdown">
        <form action="{{ url('set_language') }}" method="post" id="languageForm">
            {% if csrf_token %}
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            {% endif %}
            <input type="hidden" name="next" value="{{ request.get_full_path() }}">
            {% for lang_code, lang_name in LANGUAGES %}
                <button type="submit" 
                        name="language" 
                        value="{{ lang_code }}"
                        class="lang-option {% if get_language() == lang_code %}active{% endif %}"
                        data-lang="{{ lang_code }}">
                    {{ lang_name }}
                </button>
            {% endfor %}
        </form>
    </div>
</div>

<style>
.language-switcher {
    position: fixed;
    top: 70px; /* Below header (header is ~60px) */
    right: 0;
    z-index: 999;
}

.language-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px 12px 16px;
    background: var(--bg-secondary, #f5f5f5);
    border: 1px solid var(--border-color, #ddd);
    border-right: none; /* Remove right border to touch edge */
    border-radius: 24px 0 0 24px; /* Semi-circular on left, flat on right */
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary, #333);
    transition: all 0.3s ease;
    box-shadow: -2px 2px 8px rgba(0,0,0,0.1);
}

.language-btn:hover {
    background: var(--bg-hover, #e0e0e0);
    transform: translateX(-4px); /* Slide out on hover */
    box-shadow: -4px 4px 12px rgba(0,0,0,0.15);
}

.language-btn svg {
    color: var(--text-secondary, #666);
}

.current-lang {
    font-weight: 600;
    color: var(--primary-color, #2563eb);
}

.language-dropdown {
    position: absolute;
    top: 0;
    right: 100%; /* Position to the left of the button */
    margin-right: 8px;
    background: var(--bg-primary, white);
    border: 1px solid var(--border-color, #ddd);
    border-radius: 12px;
    box-shadow: -4px 4px 16px rgba(0,0,0,0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateX(10px);
    transition: all 0.3s ease;
    min-width: 180px;
    overflow: hidden;
}

.language-dropdown.show {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
}

.language-dropdown form {
    display: flex;
    flex-direction: column;
}

.lang-option {
    padding: 12px 18px;
    border: none;
    background: transparent;
    text-align: left;
    cursor: pointer;
    font-size: 14px;
    color: var(--text-primary, #333);
    transition: all 0.2s ease;
    border-bottom: 1px solid var(--border-color, #f0f0f0);
}

.lang-option:last-child {
    border-bottom: none;
}

.lang-option:hover {
    background: var(--bg-hover, #f5f5f5);
    color: var(--primary-color, #2563eb);
}

.lang-option.active {
    background: var(--primary-color, #2563eb);
    color: white;
    font-weight: 600;
}

.lang-option.active:hover {
    background: var(--primary-hover, #1d4ed8);
}

/* Dark theme support */
[data-theme="dark"] .language-btn {
    background: var(--bg-secondary);
    border-color: var(--border-color);
    color: var(--text-primary);
}

[data-theme="dark"] .language-btn:hover {
    background: var(--bg-hover);
}

[data-theme="dark"] .language-dropdown {
    background: var(--bg-secondary);
    border-color: var(--border-color);
}

[data-theme="dark"] .lang-option {
    color: var(--text-primary);
}

/* Mobile responsive */
@media (max-width: 768px) {
    .language-switcher {
        top: 60px; /* Adjust for smaller header */
    }
    
    .language-btn {
        padding: 10px 16px 10px 12px;
        font-size: 13px;
    }
    
    .language-btn svg {
        width: 18px;
        height: 18px;
    }
    
    .language-dropdown {
        min-width: 150px;
    }
}

/* Tablet responsive */
@media (max-width: 1024px) {
    .language-switcher {
        top: 65px;
    }
}
</style>

<script src="{{ static('js/language-switcher.js') }}"></script>
