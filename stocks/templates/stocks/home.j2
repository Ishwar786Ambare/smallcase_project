{% extends 'stocks/base.j2' %}
{% block title %}Stock Basket Manager{% endblock %}

{% block css %}
<link rel="stylesheet" href="{{ static('css/pages/home.css') }}">
{% endblock %}
{% block content %}
    <div class="container">
        <h1>ðŸ“Š Stock Basket Manager</h1>
        <p class="subtitle">Create and manage equal-weighted stock baskets for Indian markets</p>

        {% if messages %}
        <div class="messages">
            {% for message in messages %}
            <div class="alert alert-{{ message.tags }}">
                {{ message }}
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Total Invested</div>
                <div class="stat-value">â‚¹{{ total_invested|round(2) }}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Current Value</div>
                <div class="stat-value">â‚¹{{ total_current_value|round(2) }}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Profit/Loss</div>
                <div class="stat-value {% if total_profit_loss %}positive{% else %}negative{% endif %}">
                    â‚¹{{ total_profit_loss|round(2) }}
                </div>
            </div>
        </div>

        <div class="actions">

            <a href="{{ url('basket_create') }}" class="btn btn-primary">+ Create New Basket</a>
            <a href="{{ url('populate_stocks') }}" class="btn btn-secondary">ðŸ“¥ Load Indian Stocks</a>
            <a href="{{ url ('update_prices') }}" class="btn btn-secondary">ðŸ”„ Update Prices</a>
        </div>

        <div class="section">
            <h2 class="section-title">Your Baskets ({{ baskets|length }})</h2>

            {% if baskets %}
            <div class="baskets-grid">
                {% for basket in baskets %}
                <div class="basket-card">
                    <div class="basket-name">{{ basket.name }}</div>
                    <div class="basket-info">
                        <strong>Investment:</strong> â‚¹{{ basket.investment_amount}}
                    </div>
                    <div class="basket-info">
                        <strong>Current Value:</strong> â‚¹{{ basket.get_total_value()|round(2) }}
                    </div>
                    <div class="basket-info">
                        <strong>P/L:</strong>
                        <span class="{% if basket.get_profit_loss() >= 0 %}positive{% else %}negative{% endif %}">
                            â‚¹{{ basket.get_profit_loss() }} ({{ basket.get_profit_loss_percentage()|round(2) }}%)
                        </span>
                    </div>
                    <div class="basket-info">
                        <strong>Stocks:</strong> {{basket.items | count}}
                    </div>
                    <div class="basket-actions">
                        <a href="{{ url('basket_detail', args=[basket.id]) }}" class="btn btn-primary">View Details</a>
                        <a href="{{ url('basket_delete', args=[basket.id]) }}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“­</div>
                <h3>No baskets yet</h3>
                <p>Create your first equal-weighted stock basket to get started!</p>
            </div>
            {% endif %}
        </div>

        <div class="section">
            <h2 class="section-title">Available Stocks ({{ stocks|length }})</h2>

            {% if stocks %}
            <table id="stocks-table" class="stocks-table">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th>Name</th>
                        <th>Current Price</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    {% for stock in stocks %}
                    <tr>
                        <td><strong>{{ stock.symbol }}</strong></td>
                        <td>{{ stock.name }}</td>
                        <td>â‚¹{{ stock.current_price }}</td>
                        <td>{{ stock.last_updated.strftime('%d %b %Y %H:%M') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“Š</div>
                <h3>No stocks available</h3>
                <p>Click "Load Indian Stocks" to populate the database with popular Indian stocks</p>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}

{% block javascript %}
<script src="{{ static('js/pages/home.js') }}"></script>
{% endblock %}
