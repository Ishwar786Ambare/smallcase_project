{% extends 'stocks/base.j2' %}
{% block title %}Stock Basket Manager{% endblock %}

{% block css %}
<style>
        .container {
            max-width: 1200px;
            margin: 40px auto;
            background: var(--container-bg);
            border-radius: var(--radius-lg);
            padding: 40px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
        }

        h1 {
            color: var(--text-primary);
            margin-bottom: 24px;
            font-size: 2.5em;
            letter-spacing: -0.025em;
        }

        .subtitle {
            color: var(--text-secondary);
            margin-bottom: 40px;
            font-size: 1.1em;
            max-width: 600px;
            line-height: 1.6;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 24px;
            margin-bottom: 48px;
        }

        .stat-card {
            background: var(--card-bg);
            color: var(--text-primary);
            padding: 32px;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--border-color);
            transition: all 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-color);
        }
        
        .stat-label {
            color: var(--text-secondary);
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 600;
            margin-bottom: 8px;
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            font-family: 'Inter', monospace;
            font-feature-settings: "tnum";
            color: var(--text-primary);
        }

        .actions {
            display: flex;
            gap: 16px;
            margin-bottom: 48px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: var(--radius-md);
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.2s ease;
        }

        .btn-primary {
            background: var(--primary-color);
            color: white;
            box-shadow: 0 1px 2px 0 rgba(0,0,0,0.1);
        }

        .btn-primary:hover {
            background: var(--primary-hover);
            transform: translateY(-1px);
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
        }

        .btn-secondary {
            background: var(--container-bg);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: var(--table-hover);
            border-color: var(--text-secondary);
        }

        .btn-danger {
            background: var(--container-bg);
            color: #ef4444;
            padding: 8px 16px;
            font-size: 0.9em;
            border: 1px solid #fee2e2;
        }

        .btn-danger:hover {
            background: var(--table-hover);
            border-color: #ef4444;
        }

        .section {
            margin-bottom: 60px;
        }

        .section-title {
            font-size: 1.5em;
            color: var(--text-primary);
            margin-bottom: 24px;
            padding-bottom: 12px;
            border-bottom: 2px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .baskets-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 24px;
        }

        .basket-card {
            border: 1px solid var(--border-color);
            border-radius: var(--radius-lg);
            padding: 24px;
            transition: all 0.2s ease;
            background: var(--card-bg);
            display: flex;
            flex-direction: column;
        }

        .basket-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-color);
        }

        .basket-name {
            font-size: 1.25em;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 16px;
            letter-spacing: -0.02em;
        }

        .basket-info {
            font-size: 0.95em;
            color: var(--text-secondary);
            margin: 6px 0;
            display: flex;
            justify-content: space-between;
        }
        
        .basket-info strong {
            color: var(--text-primary);
            font-weight: 500;
        }

        .basket-actions {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 12px;
            margin-top: 24px;
            padding-top: 16px;
            border-top: 1px solid var(--border-color);
        }
        
        .basket-actions .btn {
            width: auto;
            padding: 8px 16px;
            font-size: 0.9em;
        }

        .stocks-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: var(--container-bg);
            border-radius: var(--radius-lg);
            overflow: hidden;
            border: 1px solid var(--border-color);
        }

        .stocks-table th {
            background: var(--table-hover);
            color: var(--text-secondary);
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 16px;
            text-align: left;
            font-weight: 600;
            border-bottom: 1px solid var(--border-color);
        }

        .stocks-table td {
            padding: 16px;
            border-bottom: 1px solid var(--border-color);
            color: var(--text-primary);
            font-size: 0.95rem;
        }

        .stocks-table tr:last-child td {
            border-bottom: none;
        }

        .stocks-table tr:hover {
            background: var(--table-hover);
        }

        .messages {
            margin-bottom: 32px;
        }

        .alert {
            padding: 16px;
            border-radius: var(--radius-md);
            margin-bottom: 16px;
            border: 1px solid transparent;
        }

        .alert-success {
            background: var(--card-bg);
            color: #10b981;
            border-color: var(--border-color);
            border-left: 4px solid #10b981;
        }

        .alert-error {
            background: var(--card-bg);
            color: #ef4444;
            border-color: var(--border-color);
            border-left: 4px solid #ef4444;
        }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: var(--text-secondary);
            background: var(--bg-body);
            border-radius: var(--radius-lg);
            border: 1px dashed var(--border-color);
        }

        .empty-state-icon {
            font-size: 3em;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .positive {
            color: #16a34a;
            font-weight: 500;
        }

        .negative {
            color: #dc2626;
            font-weight: 500;
        }

        /* DataTables Dark Mode Support & Reset */
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
             color: var(--text-secondary) !important;
             margin-bottom: 16px;
        }
        
        .dataTables_wrapper .dataTables_filter input {
            border: 1px solid var(--border-color);
            border-radius: var(--radius-md);
            padding: 6px 12px;
            background: var(--input-bg);
            color: var(--text-primary);
        }
        
        table.dataTable.no-footer {
            border-bottom: 1px solid var(--border-color);
        }

        /* Mobile Responsive for Home Page */
        @media (max-width: 768px) {
            .container {
                padding: 24px;
                margin: 20px auto;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .actions {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
            }

            /* Make DataTables wrapper scrollable */
            .dataTables_wrapper {
                overflow-x: auto;
            }
        }
</style>
{% endblock %}
{% block content %}
    <div class="container">
        <h1>ðŸ“Š Stock Basket Manager</h1>
        <p class="subtitle">Create and manage equal-weighted stock baskets for Indian markets</p>

        {% if messages %}
        <div class="messages">
            {% for message in messages %}
            <div class="alert alert-{{ message.tags }}">
                {{ message }}
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Total Invested</div>
                <div class="stat-value">â‚¹{{ total_invested|round(2) }}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Current Value</div>
                <div class="stat-value">â‚¹{{ total_current_value|round(2) }}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Profit/Loss</div>
                <div class="stat-value {% if total_profit_loss %}positive{% else %}negative{% endif %}">
                    â‚¹{{ total_profit_loss|round(2) }}
                </div>
            </div>
        </div>

        <div class="actions">

            <a href="{{ url('basket_create') }}" class="btn btn-primary">+ Create New Basket</a>
            <a href="{{ url('populate_stocks') }}" class="btn btn-secondary">ðŸ“¥ Load Indian Stocks</a>
            <a href="{{ url ('update_prices') }}" class="btn btn-secondary">ðŸ”„ Update Prices</a>
        </div>

        <div class="section">
            <h2 class="section-title">Your Baskets ({{ baskets|length }})</h2>

            {% if baskets %}
            <div class="baskets-grid">
                {% for basket in baskets %}
                <div class="basket-card">
                    <div class="basket-name">{{ basket.name }}</div>
                    <div class="basket-info">
                        <strong>Investment:</strong> â‚¹{{ basket.investment_amount}}
                    </div>
                    <div class="basket-info">
                        <strong>Current Value:</strong> â‚¹{{ basket.get_total_value()|round(2) }}
                    </div>
                    <div class="basket-info">
                        <strong>P/L:</strong>
                        <span class="{% if basket.get_profit_loss() >= 0 %}positive{% else %}negative{% endif %}">
                            â‚¹{{ basket.get_profit_loss() }} ({{ basket.get_profit_loss_percentage()|round(2) }}%)
                        </span>
                    </div>
                    <div class="basket-info">
                        <strong>Stocks:</strong> {{basket.items | count}}
                    </div>
                    <div class="basket-actions">
                        <a href="{{ url('basket_detail', args=[basket.id]) }}" class="btn btn-primary">View Details</a>
                        <a href="{{ url('basket_delete', args=[basket.id]) }}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“­</div>
                <h3>No baskets yet</h3>
                <p>Create your first equal-weighted stock basket to get started!</p>
            </div>
            {% endif %}
        </div>

        <div class="section">
            <h2 class="section-title">Available Stocks ({{ stocks|length }})</h2>

            {% if stocks %}
            <table id="stocks-table" class="stocks-table">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th>Name</th>
                        <th>Current Price</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    {% for stock in stocks %}
                    <tr>
                        <td><strong>{{ stock.symbol }}</strong></td>
                        <td>{{ stock.name }}</td>
                        <td>â‚¹{{ stock.current_price }}</td>
                        <td>{{ stock.last_updated }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“Š</div>
                <h3>No stocks available</h3>
                <p>Click "Load Indian Stocks" to populate the database with popular Indian stocks</p>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}

{% block javascript %}
<script src="{{ static('js/pages/home.js') }}"></script>
{% endblock %}
