{% extends 'stocks/base.j2' %}
{% block title %}Stock Basket Manager{% endblock %}

{% block css %}

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: var(--container-bg);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 40px var(--shadow-color);
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

        h1 {
            color: var(--text-primary);
            margin-bottom: 10px;
            font-size: 2.5em;
            transition: color 0.3s ease;
        }

        .subtitle {
            color: var(--text-secondary);
            margin-bottom: 30px;
            font-size: 1.1em;
            transition: color 0.3s ease;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 15px var(--shadow-light);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px var(--shadow-light);
        }

        .actions {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #10b981;
            color: white;
        }

        .btn-secondary:hover {
            background: #059669;
            transform: translateY(-2px);
        }

        .btn-danger {
            background: #ef4444;
            color: white;
            padding: 8px 15px;
            font-size: 0.9em;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .section {
            margin-bottom: 40px;
        }

        .section-title {
            font-size: 1.8em;
            color: var(--text-primary);
            margin-bottom: 20px;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
            transition: color 0.3s ease;
        }

        .baskets-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .basket-card {
            border: 2px solid var(--card-border);
            border-radius: 10px;
            padding: 20px;
            transition: all 0.3s ease;
            background: var(--card-bg);
        }

        .basket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px var(--shadow-light);
            border-color: #667eea;
        }

        .basket-name {
            font-size: 1.3em;
            font-weight: bold;
            color: var(--text-primary);
            margin-bottom: 10px;
            transition: color 0.3s ease;
        }

        .basket-info {
            font-size: 0.95em;
            color: var(--text-secondary);
            margin: 8px 0;
            transition: color 0.3s ease;
        }

        .basket-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .stocks-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--container-bg);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 2px 10px var(--shadow-lighter);
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

        .stocks-table th {
            background: #667eea;
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }

        .stocks-table td {
            padding: 12px 15px;
            border-bottom: 1px solid var(--border-color);
            color: var(--text-primary);
            transition: color 0.3s ease, border-color 0.3s ease;
        }

        .stocks-table tr:hover {
            background: var(--table-hover);
        }

        .messages {
            margin-bottom: 20px;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .alert-success {
            background: #d1fae5;
            color: #065f46;
            border-left: 4px solid #10b981;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border-left: 4px solid #ef4444;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--empty-state-color);
            transition: color 0.3s ease;
        }

        .empty-state-icon {
            font-size: 4em;
            margin-bottom: 20px;
        }

        .positive {
            color: #10b981;
        }

        .negative {
            color: #ef4444;
        }

        /* DataTables Dark Mode Support */
        [data-theme="dark"] .dataTables_wrapper .dataTables_length,
        [data-theme="dark"] .dataTables_wrapper .dataTables_filter,
        [data-theme="dark"] .dataTables_wrapper .dataTables_info,
        [data-theme="dark"] .dataTables_wrapper .dataTables_paginate {
            color: var(--text-primary);
        }

        [data-theme="dark"] .dataTables_wrapper .dataTables_filter input,
        [data-theme="dark"] .dataTables_wrapper .dataTables_length select {
            background: var(--card-bg);
            color: var(--text-primary);
            border: 1px solid var(--border-color);
        }

        [data-theme="dark"] .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: var(--text-primary) !important;
        }

        [data-theme="dark"] .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: var(--card-bg);
            color: var(--text-primary) !important;
            border: 1px solid var(--border-color);
        }
{% endblock %}
{% block content %}
    <div class="container">
        <h1>ðŸ“Š Stock Basket Manager</h1>
        <p class="subtitle">Create and manage equal-weighted stock baskets for Indian markets</p>

        {% if messages %}
        <div class="messages">
            {% for message in messages %}
            <div class="alert alert-{{ message.tags }}">
                {{ message }}
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Total Invested</div>
                <div class="stat-value">â‚¹{{ total_invested|round(2) }}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Current Value</div>
                <div class="stat-value">â‚¹{{ total_current_value|round(2) }}</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Profit/Loss</div>
                <div class="stat-value {% if total_profit_loss %}positive{% else %}negative{% endif %}">
                    â‚¹{{ total_profit_loss|round(2) }}
                </div>
            </div>
        </div>

        <div class="actions">

            <a href="{{ url('basket_create') }}" class="btn btn-primary">+ Create New Basket</a>
            <a href="{{ url('populate_stocks') }}" class="btn btn-secondary">ðŸ“¥ Load Indian Stocks</a>
            <a href="{{ url ('update_prices') }}" class="btn btn-secondary">ðŸ”„ Update Prices</a>
        </div>

        <div class="section">
            <h2 class="section-title">Your Baskets ({{ baskets|length }})</h2>

            {% if baskets %}
            <div class="baskets-grid">
                {% for basket in baskets %}
                <div class="basket-card">
                    <div class="basket-name">{{ basket.name }}</div>
                    <div class="basket-info">
                        <strong>Investment:</strong> â‚¹{{ basket.investment_amount}}
                    </div>
                    <div class="basket-info">
                        <strong>Current Value:</strong> â‚¹{{ basket.get_total_value()|round(2) }}
                    </div>
                    <div class="basket-info">
                        <strong>P/L:</strong>
                        <span class="{% if basket.get_profit_loss() >= 0 %}positive{% else %}negative{% endif %}">
                            â‚¹{{ basket.get_profit_loss() }} ({{ basket.get_profit_loss_percentage()|round(2) }}%)
                        </span>
                    </div>
                    <div class="basket-info">
                        <strong>Stocks:</strong> {{basket.items | count}}
                    </div>
                    <div class="basket-actions">
                        <a href="{{ url('basket_detail', args=[basket.id]) }}" class="btn btn-primary">View Details</a>
                        <a href="{{ url('basket_delete', args=[basket.id]) }}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“­</div>
                <h3>No baskets yet</h3>
                <p>Create your first equal-weighted stock basket to get started!</p>
            </div>
            {% endif %}
        </div>

        <div class="section">
            <h2 class="section-title">Available Stocks ({{ stocks|length }})</h2>

            {% if stocks %}
            <table id="stocks-table" class="stocks-table">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th>Name</th>
                        <th>Current Price</th>
                        <th>Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    {% for stock in stocks %}
                    <tr>
                        <td><strong>{{ stock.symbol }}</strong></td>
                        <td>{{ stock.name }}</td>
                        <td>â‚¹{{ stock.current_price }}</td>
                        <td>{{ stock.last_updated }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">ðŸ“Š</div>
                <h3>No stocks available</h3>
                <p>Click "Load Indian Stocks" to populate the database with popular Indian stocks</p>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}

{% block javascript %}
    <script>
        $(document).ready(function() {
            console.log('ready');
            $('#stocks-table').DataTable();
        });
    </script>
{% endblock %}
